{% extends 'base.html.twig' %}

{% block title %}
    Horaires du Zoo
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="text-center mt-4 mb-4">
            <img src="{{ asset('styles/images/Zoo-Arcadia.svg') }}" alt="Logo du Zoo" class="img-fluid" style="max-width: 200px;">
            <h1 class="mt-3">
                Horaires d'ouverture du Zoo
            </h1>
        </div>
        <table class="table table-striped table-bordered mb-5">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        Jour
                    </th>
                    <th scope="col">
                        Ouverture
                    </th>
                    <th scope="col">
                        Fermeture
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for horaire in horaires %}
                    <tr>
                        <td>
                            {{ horaire.jour }}
                        </td>
                        <td>
                            {{ horaire.ouvre|date('H:i') }}
                        </td>
                        <td>
                            {{ horaire.ferme|date('H:i') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

